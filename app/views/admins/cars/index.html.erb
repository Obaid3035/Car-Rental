<div class="container-fluid">
  <br>

  <div class="jumbotron">
    <div class="row">
      <h3 class="col-sm-11">Cars</h3>
      <%= link_to "Create", new_admins_car_path, remote: true, data: { controller: 'open-form-modal', action: 'ajax:success->open-form-modal#openModal' }, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="col-sm-12">
    <table class="table">
      <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Year</th>
        <th>License Plate</th>
        <th>Manufacturer</th>
        <th>Created At</th>
        <th>Updated At</th>
      </tr>
      </thead>
      <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%=car.id%></td>
          <td><%=car.name%></td>
          <td><%=car.year%></td>
          <td><%=car.license_plate%></td>
          <td><%=car.manufacturer.name%></td>
          <td><%=car.created_at%></td>
          <td><%=car.updated_at%></td>
          <td><%= link_to 'Edit', edit_admins_car_path(car), remote: true, data: { controller: 'open-form-modal', action: 'ajax:success->open-form-modal#openModal' } %></td>
          <td><%= link_to 'Delete', admins_car_path(car),
                          method: :delete,
                          data: { confirm: 'Are you sure' } %> </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>