<div class="container-fluid">
  <br>

  <div class="jumbotron">
    <div class="row">
      <h3 class="col-sm-11">Manufacturer</h3>
      <%= link_to "Create", new_admins_manufacturer_path, remote: true, data: { controller: 'open-form-modal', action: 'ajax:success->open-form-modal#openModal' }, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Created At</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody>
        <% @manufacturers.each do |manufacturer| %>
          <tr>
            <td><%=manufacturer.id%></td>
            <td><%=manufacturer.name%></td>
            <td><%=manufacturer.created_at%></td>
            <td><%=manufacturer.updated_at%></td>
            <td><%= link_to 'Edit', edit_admins_manufacturer_path(manufacturer), remote: true, data: { controller: 'open-form-modal', action: 'ajax:success->open-form-modal#openModal' } %></td>
            <td><%= link_to 'Delete', admins_manufacturer_path(manufacturer),
                                      method: :delete,
                                      data: { confirm: 'Are you sure' } %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>